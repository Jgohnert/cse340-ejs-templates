<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<form class="forms" action="/inv/add-inventory" method="post">
  <fieldset>
  <div class="form-inputs">
     <label>Classification *
      <%- classificationList %>
    </label>
    <label>Make *
      <input type="text" id="make" name="inv_make" minlength="3" placeholder="Minimum of 3 characters"  required value="<%= locals.inv_make %>">
    </label>
    <label>Model *
      <input type="text" id="model" name="inv_model" minlength="3" placeholder="Minimum of 3 characters"  required value="<%= locals.inv_model %>">
    </label>
    <label>Description *
      <textarea id="description" name="inv_description" required><%= locals.inv_description %></textarea>
    </label>
    <label>Image Path *
      <input type="text" id="image" name="inv_image" value="\images\vehicles\no-image.png" required value="<%= locals.inv_image %>">
    </label>
    <label>Thumbnail Path *
      <input type="text" id="thumbnail" name="inv_thumbnail" value="\images\vehicles\no-image.png" required value="<%= locals.inv_thumbnail %>">
    </label>
    <label>Price *
      <input type="number" step="any" id="price" name="inv_price" placeholder="Decimal or Integer" required value="<%= locals.inv_price %>">
    </label>
    <label>Year *
      <input type="number" id="year" name="inv_year" minlength="3" placeholder="4-digit year" required value="<%= locals.inv_year %>">
    </label>
    <label>Miles *
      <input type="number" id="miles" name="inv_miles" placeholder="Digits only" required value="<%= locals.inv_miles %>">
    </label>
    <label>Color *
      <input type="text" id="color" name="inv_color" required value="<%= locals.inv_color %>">
    </label>
  </div>
  </fieldset>
  <input class="form-button" type="submit" value="Add Vehicle">
</form>

<script src="/js/script.js"></script>