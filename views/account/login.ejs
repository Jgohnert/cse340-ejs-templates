<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (locals.errors) { %>
  <ul class="notice">
    <% locals.errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>


<form class="forms" action="/account/login" method="post">
  <fieldset>
  <div class="form-inputs">
    <label>Email
      <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>">
    </label>
    <label>Password
      <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special characters</p>
      <input type="password" id="password" name="account_password" 
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      title="Password must be at least 12 characters long and contain at least one capital letter, one number, and one special character." 
      required>
    </label>
  </div>
  </fieldset>
  <input class="form-button" type="submit" value="Login">
</form>
<div id="signup-button">
  <a href="/account/register">No account? Click here to Sign-up</a>
</div>
